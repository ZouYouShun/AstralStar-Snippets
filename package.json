{
  "name": "snippets-tool",
  "description": "snippets for quick typing",
  "author": "alan zou",
  "version": "0.0.0",
  "scripts": {
    "postinstall": "npm run rebuild",
    "ng": "ng",
    "start": "npm run start:electron",
    "serve": "ng serve",
    "build:electron": "tsc -p electron/tsconfig.electron.json --watch",
    "build:electron:prod": "tsc -p electron/tsconfig.electron.prod.json",
    "build:prod": "ng build --prod",
    "build:release": "npm run build:prod && npm run build:package",
    "build:package": "node scripts/build && npm run build:electron:prod",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "start:electron": "electron . --remote-debugging-port=9222",
    "mac-icon-create": "cd assets && iconutil -c icns ./icon.iconset",
    "electron:build": "cd build && npm install && electron-packager . AstralSnippets --arch=x64 --icon=../assets/icon.icns --overwrite",
    "release": "npm run build:release && npm run electron:build",
    "rebuild": "npm rebuild --runtime=electron --target=9.0.5 --disturl=https://atom.io/download/atom-shell --abi=79"
  },
  "main": "dist/electron/main.dev.js",
  "private": true,
  "dependencies": {
    "@angular/animations": "~10.0.0",
    "@angular/common": "~10.0.0",
    "@angular/compiler": "~10.0.0",
    "@angular/core": "~11.0.5",
    "@angular/forms": "~10.0.0",
    "@angular/platform-browser": "~10.0.0",
    "@angular/platform-browser-dynamic": "~10.0.0",
    "@angular/router": "~10.0.0",
    "bootstrap": "^4.5.0",
    "rxjs": "~6.5.5",
    "tslib": "^2.0.0",
    "robotjs": "^0.6.0",
    "zone.js": "~0.10.3"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~14.2.2",
    "@angular/cli": "~10.2.4",
    "@angular/compiler-cli": "~10.0.0",
    "@types/jasmine": "~3.5.0",
    "@types/jasminewd2": "~2.0.3",
    "@types/node": "^12.11.1",
    "codelyzer": "^6.0.0-next.1",
    "electron": "^22.1.0",
    "electron-packager": "^17.1.1",
    "electron-reload": "^1.5.0",
    "fs-extra": "^9.0.1",
    "jasmine-core": "~3.5.0",
    "jasmine-spec-reporter": "~5.0.0",
    "karma": "~6.3.16",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage-istanbul-reporter": "~3.0.2",
    "karma-jasmine": "~3.3.0",
    "karma-jasmine-html-reporter": "^1.5.0",
    "protractor": "~7.0.0",
    "ts-node": "~8.3.0",
    "tslint": "~6.1.0",
    "typescript": "~3.9.5"
  },
  "build": {
    "appId": "com.electron.snippets-tool",
    "mac": {
      "category": "com.electron.snippets-tool"
    }
  }
}
